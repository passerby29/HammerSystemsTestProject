<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/pizzaMainImageView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_marginEnd="24dp"
            tools:src="@drawable/im_pizza_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pizzaNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                tools:text="Ветчина и грибы" />

            <TextView
                android:id="@+id/pizzaDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/sf_ui_display"
                android:textColor="@color/pizza_desc_color"
                android:textSize="14sp"
                tools:text="Ветчина,шампиньоны, увеличинная порция моцареллы, томатный соус" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pizzaPriceButton"
                android:layout_width="88dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:background="@drawable/item_button_background_outline"
                android:textColor="@color/selected_text_color" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>